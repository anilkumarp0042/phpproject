{% extends 'base.html.twig' %}

{% block page_title 'Mot de passe oublié' %}

{% block stylesheets %}
    <style type="text/css">
        body {
            height: 100vh;
            justify-content: space-between;
        }
        header,
        footer {
            flex-grow: 0;
        }
        main {
            flex-grow: 1;
        }
    </style>
{% endblock %}

{% block content %}

    <main class="forgot-password">
        {% if legacy %}
            <section class="l__wrapper--slim b__nudge--bottom-large">
                <div class="committee__waiting-for-approval">
                    Le lien que vous venez d'utilisez n'est plus disponible depuis que la plateforme En Marche a été mise à jour.
                    Pour demander un nouveau mot de passe, vous pouvez utiliser le formulaire suivant.
                </div>
            </section>
        {% endif %}

        <section class="l__wrapper-300">
            <div>
                <h2>Mot de passe oublié</h2>

                <div class="security_password__form">
                    <p class="security__form__title">Saisissez l'adresse e-mail associé à votre compte En Marche, et nous vous enverrons un email afin de réinitialiser votre mot de passe.</p>

                    {{ form_start(form) }}

                        {{ form_errors(form) }}

                        <div class="form__row">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, { attr: {
                                placeholder: 'Adresse e-mail',
                                'aria-label': 'Adresse e-mail',
                                class: 'form--full'
                            } }) }}
                        </div>

                        <div class="form__row">
                            {{ form_widget(form.submit, { label: 'Envoyer un e-mail', attr: { class: 'form form--full btn btn--blue login__button' } }) }}
                        </div>

                        {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
